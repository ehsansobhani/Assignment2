@model Assignment2.Models.ViewModels.BrokerageAdvertisementViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1> Delete add for brokerage @Model.Brokerages.First().Title </h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Advertisement</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.FileName)*@
            File Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Advertisements.First().FileName)
        </dd>
        <dt class = "col-sm-2">
            Picture
        </dt>
        <dd class = "col-sm-10">
            <img src="@Model.Advertisements.First().Url" style="max-width: 400px;" />
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="@Model.Advertisements.FirstOrDefault().AnswerImageId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-controller="Brokerages" asp-action="Index" >Back to List</a>
    </form>
</div>
