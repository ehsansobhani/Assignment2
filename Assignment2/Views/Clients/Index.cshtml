@model Assignment2.Models.ViewModels.BrokerageViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                LastName
                @*@Html.DisplayNameFor(model => model.LastName)*@
                
            </th>
            <th>
                FirstName
                @*@Html.DisplayNameFor(model => model.FirstName)*@
            </th>
            <th>
                BirthDate
                @*@Html.DisplayNameFor(model => model.BirthDate)*@
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Clients)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDate)
                </td>
                <td>
                    
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="EditSubscription" asp-route-id="@item.ID">Edit Subscriptions</a> |
                    <a asp-action="Index" asp-route-id="@item.ID">Select</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.Brokerages != null)
{
    <h3>
        Subscribers to the clients
    </h3>
    <table class="table">
        <tr>
            @if (Model.Brokerages.Count() > 0)
            {
                <th> Brokerages Name </th>
            }
            else
            {
                <th> No brokerage record exist </th>
            }
        </tr>
        @foreach (var item1 in Model.Brokerages)
        {
            <tr>
                <td>
                     @Html.DisplayFor(modelItem => item1.Title)
                    
                </td>
            </tr>
        }
    </table>
}